<mvc:View controllerName="de.fis.bewerbungverwaltung.controller.BewerbungDetail" displayBlock="true" height="100%"
	xmlns:mvc="sap.ui.core.mvc" xmlns:core="sap.ui.core" xmlns:semantic="sap.m.semantic" xmlns:custom="de.fis.bewerbungverwaltung.control"
	xmlns="sap.uxap" xmlns:layout="sap.ui.layout" xmlns:html="http://www.w3.org/1999/xhtml" xmlns:m="sap.m">
	<semantic:DetailPage title="BewerbungDetail" showNavButton="{device>/system/phone}" navButtonPress="onNavButtonPressed">
		<semantic:pagingAction>
			<m:PagingButton count="5" positionChange="onPositionChange"/>
		</semantic:pagingAction>
		<ObjectPageLayout id="ObjectPageLayout" enableLazyLoading="false" showTitleInHeaderContent="true" editHeaderButtonPress="handleEditBtnPress">
			<headerTitle>
				<ObjectPageHeader objectImageURI="./images/Pikachu.png"
					objectTitle="{testModel>BewerberDetails/Vorname} {testModel>BewerberDetails/Nachname}" objectImageShape="Circle"
					objectImageAlt="{testModel>BewerberDetails/Vorname} {testModel>BewerberDetails/Nachname}"
					objectSubtitle="{testModel>BewerberDetails/Postleitzahl} {testModel>BewerberDetails/Ort}" isObjectIconAlwaysVisible="false"
					isObjectTitleAlwaysVisible="false" isObjectSubtitleAlwaysVisible="false"></ObjectPageHeader>
			</headerTitle>
			<headerContent>
					<html:table>
						<html:tr>
							<html:td><core:Icon src="sap-icon://phone" size="1.3rem" class="sapUiTinyMarginEnd"/></html:td>
							<html:td><m:Label text="{testModel>BewerberDetails/Telefonnummer}"/></html:td>
						</html:tr>
						<html:tr>
							<html:td><core:Icon src="sap-icon://iphone" size="1.3rem" class="sapUiTinyMarginEnd"/></html:td>
							<html:td><m:Label text="{testModel>BewerberDetails/Handynummer}"/></html:td>
						</html:tr>
						<html:tr>
							<html:td><core:Icon src="sap-icon://email" size="1.3rem" class="sapUiTinyMarginEnd"/></html:td>
							<html:td><m:Label text="{testModel>BewerberDetails/Email}"/></html:td>
						</html:tr>
					</html:table>
					<m:VBox width="40%" class="sapUiSmallMarginBegin" visible="{= !${device>/system/phone}}">
						<m:Label text="Stellen" design="Bold"/>
						<m:VBox items="{path: 'testModel>/Bewerbungs/0/BewerbungStelleDetails/results'}">
							<m:items>
								<m:Text text="â€¢ {testModel>StelleDetails/Bezeichnung}"/>
							</m:items>
						</m:VBox>
					</m:VBox>
					<html:table>
						<html:tr>
							<html:td><m:Label text="Eingetragen von: "/></html:td>
							<html:td><m:Label text="{testModel>EingetragenVon}"/></html:td>
						</html:tr>
						<html:tr>
							<html:td><m:Label text="Eingetragen am: "/></html:td>
							<html:td><m:Label text="{path: 'testModel>EingetragenAm', formatter: '.formatter.formatDatum'}"/></html:td>
						</html:tr>
					</html:table>
			</headerContent>
			<sections>
				<ObjectPageSection title="Details">
					<subSections>
						<ObjectPageSubSection title=" ">
							<m:Panel title="asdf">
								<m:Label text="Some text"/>
							</m:Panel>
						</ObjectPageSubSection>
					</subSections>
				</ObjectPageSection>
				<ObjectPageSection title="Kommentare">
					<subSections>
						<ObjectPageSubSection title="">
							<m:Panel title="asdf">
								<m:Label text="Some text"/>
							</m:Panel>
						</ObjectPageSubSection>
					</subSections>
				</ObjectPageSection>
				<ObjectPageSection title="Unterlagen">
					<subSections>
						<ObjectPageSubSection title="">
							<m:Panel title="asdf">
								<m:Label text="Some text"/>
							</m:Panel>
						</ObjectPageSubSection>
					</subSections>
				</ObjectPageSection>
				<ObjectPageSection title="Umlauf">
					<subSections>
						<ObjectPageSubSection title=" ">
							<m:Panel title="asdf">
								<m:Label text="Some text"/>
							</m:Panel>
						</ObjectPageSubSection>
					</subSections>
				</ObjectPageSection>
			</sections>
		</ObjectPageLayout>
	</semantic:DetailPage>
</mvc:View>