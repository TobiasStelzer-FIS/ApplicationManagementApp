<mvc:View controllerName="de.fis.bewerbungverwaltung.controller.BewerbungDetail" displayBlock="true" height="100%"
	xmlns:mvc="sap.ui.core.mvc" xmlns:core="sap.ui.core" xmlns:semantic="sap.m.semantic" xmlns:custom="de.fis.bewerbungverwaltung.control"
	xmlns:uxap="sap.uxap" xmlns:layout="sap.ui.layout" xmlns:f="sap.ui.layout.form" xmlns:html="http://www.w3.org/1999/xhtml" xmlns="sap.m">
	<semantic:DetailPage title="{i18n>DetailTitle}" showNavButton="{device>/system/phone}" navButtonPress="onNavButtonPressed" height="100%"
		enableScrolling="false">
		<uxap:ObjectPageLayout height="100%" enableScrolling="false" id="ObjectPageLayout" enableLazyLoading="false" showTitleInHeaderContent="true"
			editHeaderButtonPress="handleEditBtnPress">
			<uxap:headerTitle>
				<uxap:ObjectPageHeader objectImageURI="{testModel>BewerberDetails/Fotopfad}"
					objectTitle="{testModel>BewerberDetails/Vorname} {testModel>BewerberDetails/Nachname}" objectImageShape="Circle"
					objectImageAlt="{testModel>BewerberDetails/Vorname} {testModel>BewerberDetails/Nachname}"
					objectSubtitle="{testModel>BewerberDetails/Postleitzahl} {testModel>BewerberDetails/Ort}" isObjectIconAlwaysVisible="false"
					isObjectTitleAlwaysVisible="false" isObjectSubtitleAlwaysVisible="false"></uxap:ObjectPageHeader>
			</uxap:headerTitle>
			<uxap:headerContent>
				<VBox width="200px">
					<FlexBox width="100%" alignItems="Start">
						<core:Icon src="sap-icon://phone" size="1.3rem" class="sapUiTinyMarginEnd">
							<core:layoutData>
								<FlexItemData minWidth="30px"/>
							</core:layoutData>
						</core:Icon>
						<Label text="{testModel>BewerberDetails/Telefonnummer}"/>
					</FlexBox>
					<FlexBox width="auto" alignItems="Start">
						<core:Icon src="sap-icon://iphone" size="1.3rem" class="sapUiTinyMarginEnd">
							<core:layoutData>
								<FlexItemData minWidth="30px"/>
							</core:layoutData>
						</core:Icon>
						<Label text="{testModel>BewerberDetails/Handynummer}"/>
					</FlexBox>
					<FlexBox width="auto" alignItems="Start">
						<core:Icon src="sap-icon://email" size="1.3rem" class="sapUiTinyMarginEnd">
							<core:layoutData>
								<FlexItemData minWidth="30px"/>
							</core:layoutData>
						</core:Icon>
						<Label text="{testModel>BewerberDetails/Email}"/>
					</FlexBox>
				</VBox>
				<VBox width="40%" class="sapUiSmallMarginBegin" visible="{= !${device>/system/phone}}">
					<Label text="Stellen" design="Bold"/>
					<VBox items="{path: 'testModel>BewerbungStelleDetails/results'}">
						<items>
							<Text text="â€¢ {testModel>StelleDetails/Bezeichnung}" class="sapUiTinyMarginBottom sapUiSmallMarginBegin"/>
						</items>
					</VBox>
				</VBox>
				<VBox width="auto">
					<FlexBox width="auto">
						<Label text="{i18n>DetailEnteredBy}:">
							<layoutData>
								<FlexItemData minWidth="115px"/>
							</layoutData>
						</Label>
						<Label text="{testModel>EingetragenVon}"/>
					</FlexBox>
					<FlexBox width="auto" alignItems="End">
						<Label text="{i18n>DetailEnteredOn}:">
							<layoutData>
								<FlexItemData minWidth="115px"/>
							</layoutData>
						</Label>
						<Label text="{path: 'testModel>EingetragenAm', formatter: '.formatter.formatDatum'}"/>
					</FlexBox>
				</VBox>
			</uxap:headerContent>
			<uxap:sections>
				<uxap:ObjectPageSection title="{i18n>DetailSectionTitleDetails}">
					<uxap:subSections>
						<uxap:ObjectPageSubSection title="">
							<VBox>
								<VBox id="containerDetails">
									<core:Fragment fragmentName="de.fis.bewerbungverwaltung.view.fragment.Details" type="XML"/>
								</VBox>
								<HBox>
									<Button id="btnDetailsEdit" text="Bearbeiten" data="btnDetailsEdit" press="onBearbeiten"/>
									<Button id="btnDetailsSave" text="Speichern" press="onSave" visible="false"/>
									<Button id="btnDetailsCancel" text="Abbrechen" press="onCancel" visible="false"/>
								</HBox>
							</VBox>
						</uxap:ObjectPageSubSection>
					</uxap:subSections>
				</uxap:ObjectPageSection>
				<uxap:ObjectPageSection title="{i18n>DetailSectionTitleComments}">
					<uxap:subSections>
						<uxap:ObjectPageSubSection id="sectionKommentare" title="">
							<VBox>
								<VBox id="containerKommentare">
									<core:Fragment fragmentName="de.fis.bewerbungverwaltung.view.fragment.Kommentare" type="XML"/>
								</VBox>
								<HBox>
									<Button id="btnKommentareEdit" text="Bearbeiten" press="onBearbeiten"/>
									<Button id="btnKommentareSave" text="Speichern" press="onSave" visible="false"/>
									<Button id="btnKommentareCancel" text="Abbrechen" press="onCancel" visible="false"/>
								</HBox>
							</VBox>
						</uxap:ObjectPageSubSection>
					</uxap:subSections>
				</uxap:ObjectPageSection>
				<uxap:ObjectPageSection title="{i18n>DetailSectionTitleDocuments}">
					<uxap:subSections>
						<uxap:ObjectPageSubSection id="sectionUnterlagen" title="">
							<VBox>
								<VBox id="containerUnterlagen">
									<core:Fragment fragmentName="de.fis.bewerbungverwaltung.view.fragment.Unterlagen" type="XML"/>
								</VBox>
								<HBox>
									<Button id="btnUnterlagenEdit" text="Bearbeiten" press="onBearbeiten"/>
									<Button id="btnUnterlagenSave" text="Speichern" press="onSave" visible="false"/>
									<Button id="btnUnterlagenCancel" text="Abbrechen" press="onCancel" visible="false"/>
								</HBox>
							</VBox>
						</uxap:ObjectPageSubSection>
					</uxap:subSections>
				</uxap:ObjectPageSection>
				<uxap:ObjectPageSection title="{i18n>DetailSectionTitleCirculation}">
					<uxap:subSections>
						<uxap:ObjectPageSubSection id="sectionUmlauf" title="">
							<VBox>
								<VBox id="containerUmlauf">
									<core:Fragment fragmentName="de.fis.bewerbungverwaltung.view.fragment.Umlauf" type="XML"/>
								</VBox>
								<HBox>
									<Button id="btnUmlaufEdit" text="Bearbeiten" press="onBearbeiten"/>
									<Button id="btnUmlaufSave" text="Speichern" press="onSave" visible="false"/>
									<Button id="btnUmlaufCancel" text="Abbrechen" press="onCancel" visible="false"/>
								</HBox>
							</VBox>
						</uxap:ObjectPageSubSection>
					</uxap:subSections>
				</uxap:ObjectPageSection>
			</uxap:sections>
		</uxap:ObjectPageLayout>
	</semantic:DetailPage>
</mvc:View>