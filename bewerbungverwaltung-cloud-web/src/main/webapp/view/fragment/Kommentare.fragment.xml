<core:FragmentDefinition xmlns:core="sap.ui.core" xmlns:commons="sap.ui.commons" xmlns:l="sap.ui.layout" xmlns="sap.m">
	<VBox>
		<VBox>
			<List items="{path: 'testModel>KommentarDetails'}" class="listKommentare sapUiSmallMarginTop" width="100%">
				<CustomListItem class="sapUiSmallMarginBottom" height="auto">
					<Title width="100%" text="{testModel>Thema}" titleStyle="H4" class="themaKommentar"/>
					<FlexBox width="100%" alignItems="Start">
						<Label text="{i18n>KommentareName}:" class="sapUiTinyMarginEnd">
							<layoutData>
								<FlexItemData minWidth="60px"/>
							</layoutData>
						</Label>
						<Text text="{testModel>Name}"/>
					</FlexBox>
					<FlexBox width="100%" alignItems="Start">
						<Label text="{i18n>KommentareDate}:" class="sapUiTinyMarginEnd">
							<layoutData>
								<FlexItemData minWidth="60px"/>
							</layoutData>
						</Label>
						<Text text="{path: 'testModel>Zeitstempel', formatter: '.formatter.formatZeitstempel'}"/>
					</FlexBox>
					<TextArea growing="true" growingMaxLines="4" editable="false" value="{testModel>Text}" width="100%" height="auto"/>
				</CustomListItem>
			</List>
		</VBox>
		<HBox>
			<Button id="btnKommentareEdit" text="{i18n>DetailAddKommentarButton}" press="onKommentareEdit"/>
		</HBox>
	</VBox>
</core:FragmentDefinition>