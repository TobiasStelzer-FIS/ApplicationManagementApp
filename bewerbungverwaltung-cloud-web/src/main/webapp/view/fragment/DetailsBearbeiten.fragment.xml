<core:FragmentDefinition xmlns:core="sap.ui.core" xmlns:commons="sap.ui.commons" xmlns:l="sap.ui.layout" xmlns:f="sap.ui.layout.form"
	xmlns="sap.m">
	<Dialog title="Details bearbeiten">
		<f:Form editable="true" class="editableForm">
			<f:layout>
				<f:ResponsiveGridLayout columnsM="2" singleContainerFullSize="false" adjustLabelSpan="false" labelSpanM="4" emptySpanM="0"/>
			</f:layout>
			<f:FormContainer>
				<f:title>
					<core:Title text="{i18n>DetailsPersonalData}"/>
				</f:title>
				<f:FormElement label="{i18n>DetailsSurname}">
					<Input value="{testModel>BewerberDetails/Nachname}"/>
				</f:FormElement>
				<f:FormElement label="{i18n>DetailsForename}">
					<Input value="{testModel>BewerberDetails/Vorname}"/>
				</f:FormElement>
				<f:FormElement label="{i18n>DetailsStreet}">
					<Input value="{testModel>BewerberDetails/StrasseHnr}"/>
				</f:FormElement>
				<f:FormElement label="{i18n>ZipCity}">
					<Input value="{testModel>BewerberDetails/Postleitzahl}"/>
					<Input value="{testModel>BewerberDetails/Ort}"/>
				</f:FormElement>
			</f:FormContainer>
			<f:FormContainer>
				<f:title>
					<core:Title text="{i18n>DetailsContactDetails}"/>
				</f:title>
				<f:FormElement label="{i18n>DetailsEmail}">
					<Input value="{testModel>BewerberDetails/Email}"/>
				</f:FormElement>
				<f:FormElement label="{i18n>DetailsPhone}">
					<Input value="{testModel>BewerberDetails/Telefonnummer}"/>
				</f:FormElement>
				<f:FormElement label="{i18n>DetailsMobile}">
					<Input value="{testModel>BewerberDetails/Handynummer}"/>
				</f:FormElement>
			</f:FormContainer>
			<f:FormContainer>
				<f:title>
					<core:Title text="{i18n>DetailsAppliedFor}"/>
				</f:title>
				<f:FormElement>
					<MultiComboBox items="{path: 'testModel>/Stelles', sorter: {path: 'Bezeichnung'}}" selectedItems="{path: 'testModel>/BewerbungStelleDetails'}">
						<core:Item key="{testModel>StelleId}" text="{testModel>Bezeichnung}"/>
					</MultiComboBox>
<!--
					<List id="tableStellen" items="{path: 'testModel>BewerbungStelleDetails'}" noDataText="{i18n>DetailsBearbeitenNoDataTextStellen}"
						inset="false" mode="Delete" delete="onDeleteStelle" updateFinished="onStellenUpdateFinished">
						<headerToolbar>
							<Toolbar>
								<Title text="{i18n>DetailsBearbeitenStellenTitle}" level="H2"/>
								<ToolbarSpacer/>
								<Button icon="sap-icon://add" press="onAddStelle"/>
							</Toolbar>
						</headerToolbar>
						<CustomListItem>
							<Text text="{testModel>StelleDetails/Bezeichnung}"/>
						</CustomListItem>
					</List>
-->
				</f:FormElement>
			</f:FormContainer>
			<f:FormContainer>
				<f:title>
					<core:Title text="{i18n>DetailsSources}"/>
				</f:title>
				<f:FormElement>
					<MultiComboBox items="{path: 'testModel>/Stelles', sorter: {path: 'Bezeichnung'}}" selectedItems="{path: 'testModel>/BewerbungStelleDetails'}">
						<core:Item key="{testModel>StelleId}" text="{testModel>Bezeichnung}"/>
					</MultiComboBox>
				</f:FormElement>
			</f:FormContainer>
		</f:Form>
		<buttons>
			<Button id="btnDetailsSave" text="{i18n>DetailSaveButton}" press="onDialogSave"/>
			<Button id="btnDetailsCancel" text="{i18n>DetailCancelButton}" press="onDialogCancel"/>
		</buttons>
	</Dialog>
</core:FragmentDefinition>