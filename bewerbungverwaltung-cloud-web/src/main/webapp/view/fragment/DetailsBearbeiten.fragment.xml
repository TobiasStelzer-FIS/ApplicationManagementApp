<core:FragmentDefinition xmlns:core="sap.ui.core" xmlns:commons="sap.ui.commons" xmlns:l="sap.ui.layout" xmlns:f="sap.ui.layout.form"
	xmlns="sap.m">
	<Dialog title="Details bearbeiten">
		<f:Form editable="true" class="editableForm">
			<f:layout>
				<f:ResponsiveGridLayout columnsM="2" columnsL="2" columnsXL="2"  singleContainerFullSize="false" adjustLabelSpan="false" labelSpanM="4" labelSpanL="4" labelSpanXL="4" emptySpanM="1"/>
			</f:layout>
			<f:FormContainer>
				<f:title>
					<core:Title text="{i18n>DetailsPersonalData}"/>
				</f:title>
				<f:FormElement label="{i18n>DetailsSurname}">
					<Input value="{applmanModel>ApplicantDetails/Lastname}"/>
				</f:FormElement>
				<f:FormElement label="{i18n>DetailsForename}">
					<Input value="{applmanModel>ApplicantDetails/Firstname}"/>
				</f:FormElement>
				<f:FormElement label="{i18n>DetailsStreet}">
					<Input value="{applmanModel>ApplicantDetails/Street}"/>
				</f:FormElement>
				<f:FormElement label="{i18n>ZipCity}">
					<Input value="{applmanModel>ApplicantDetails/Zipcode}"/>
					<Input value="{applmanModel>ApplicantDetails/City}"/>
				</f:FormElement>
			</f:FormContainer>
			<f:FormContainer>
				<f:title>
					<core:Title text="{i18n>DetailsContactDetails}"/>
				</f:title>
				<f:FormElement label="{i18n>DetailsEmail}">
					<Input value="{applmanModel>ApplicantDetails/Email}"/>
				</f:FormElement>
				<f:FormElement label="{i18n>DetailsPhone}">
					<Input value="{applmanModel>ApplicantDetails/Phone}"/>
				</f:FormElement>
				<f:FormElement label="{i18n>DetailsMobile}">
					<Input value="{applmanModel>ApplicantDetails/Mobile}"/>
				</f:FormElement>
			</f:FormContainer>
			<f:FormContainer>
				<f:title>
					<core:Title text="{i18n>DetailsAppliedFor}"/>
				</f:title>
				<f:FormElement>
					<MultiComboBox items="{path: 'applmanModel>/Positions', sorter: {path: 'Name'}}" selectedItems="{path: 'applmanModel>Positions'}">
						<core:Item key="{applmanModel>PositionId}" text="{applmanModel>Name}"/>
					</MultiComboBox>
<!--
					<List id="tableStellen" items="{path: 'applmanModel>Positions'}" noDataText="{i18n>DetailsBearbeitenNoDataTextStellen}"
						inset="false" mode="Delete" delete="onDeleteStelle" updateFinished="onStellenUpdateFinished">
						<headerToolbar>
							<Toolbar>
								<Title text="{i18n>DetailsBearbeitenStellenTitle}" level="H2"/>
								<ToolbarSpacer/>
								<Button icon="sap-icon://add" press="onAddStelle"/>
							</Toolbar>
						</headerToolbar>
						<CustomListItem>
							<Text text="{applmanModel>Name}"/>
						</CustomListItem>
					</List>
-->
				</f:FormElement>
			</f:FormContainer>
			<f:FormContainer>
				<f:title>
					<core:Title text="{i18n>DetailsSources}"/>
				</f:title>
				<f:FormElement>
					<MultiComboBox items="{path: 'applmanModel>/Sources', sorter: {path: 'Name'}}" selectedItems="{path: 'applmanModel>Sources'}">
						<core:Item key="{applmanModel>SourceId}" text="{applmanModel>Name}"/>
					</MultiComboBox>
				</f:FormElement>
			</f:FormContainer>
		</f:Form>
		<buttons>
			<Button id="btnDetailsSave" text="{i18n>DetailSaveButton}" press="onDialogSave"/>
			<Button id="btnDetailsCancel" text="{i18n>DetailCancelButton}" press="onDialogCancel"/>
		</buttons>
	</Dialog>
</core:FragmentDefinition>