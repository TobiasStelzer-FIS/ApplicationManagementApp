<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core">
	<ViewSettingsDialog
		confirm="onConfirmViewSettingsDialog">
		<sortItems>
			<ViewSettingsItem text="{i18n>ViewSettingsDate}" key="EingetragenAm" selected="true" />
			<ViewSettingsItem text="{i18n>ViewSettingsForename}" key="BewerberDetails/Vorname" />
			<ViewSettingsItem text="{i18n>ViewSettingsSurname}" key="BewerberDetails/Nachname" />
			<ViewSettingsItem text="{i18n>ViewSettingsStatus}" key="StatusDetails/Bezeichnung" />
		</sortItems>
		<filterItems>
			<ViewSettingsFilterItem text="{i18n>ViewSettingsStatus}" key="Status" items="{path: 'testModel>/Statuss'}">
				<items>
					<ViewSettingsItem text="{testModel>Bezeichnung}" key="{testModel>StatusId}" />
				</items>
			</ViewSettingsFilterItem>
			<ViewSettingsFilterItem text="{i18n>ViewSettingsPosition}" key="Stelle" items="{path: 'testModel>/Stelles'}">
				<items>
					<ViewSettingsItem text="{testModel>Bezeichnung}" key="{testModel>StelleId}"/>
				</items>
			</ViewSettingsFilterItem>
		</filterItems>
	</ViewSettingsDialog>
</core:FragmentDefinition>