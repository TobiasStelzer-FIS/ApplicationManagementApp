<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core">
	<ViewSettingsDialog
		confirm="onConfirmViewSettingsDialog">
		<sortItems>
			<ViewSettingsItem text="Datum" key="EingetragenAm" selected="true" />
			<ViewSettingsItem text="Vorname" key="BewerberDetails/Vorname" />
			<ViewSettingsItem text="Nachname" key="BewerberDetails/Nachname" />
			<ViewSettingsItem text="Status" key="StatusDetails/Bezeichnung" />
		</sortItems>
		<groupItems>
			<ViewSettingsItem text="Status" key="StatusDetails/StatusId" />
		</groupItems>
		<filterItems>
			<ViewSettingsFilterItem text="Status" key="Status" items="{path: 'testModel>/Statuss'}">
				<items>
					<ViewSettingsItem text="{testModel>Bezeichnung}" key="{testModel>StatusId}" />
				</items>
			</ViewSettingsFilterItem>
			<ViewSettingsFilterItem text="Stelle" key="Stelle" items="{path: 'testModel>/Stelles'}">
				<items>
					<ViewSettingsItem text="{testModel>Bezeichnung}" key="{testModel>StelleId}"/>
				</items>
			</ViewSettingsFilterItem>
		</filterItems>
	</ViewSettingsDialog>
</core:FragmentDefinition>