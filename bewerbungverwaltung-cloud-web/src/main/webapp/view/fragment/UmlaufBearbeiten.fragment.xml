<core:FragmentDefinition xmlns:core="sap.ui.core" xmlns:commons="sap.ui.commons" xmlns:l="sap.ui.layout" xmlns="sap.m">
	<Dialog title="{i18n>UmlaufBearbeitenTitle}">
		<VBox>
			<Table>
				<headerToolbar>
					<Toolbar>
						<Title text="{i18n>UmlaufDepartments}"/>
					</Toolbar>
				</headerToolbar>
				<columns>
					<Column>
						<header>
							<Label text="{i18n>UmlaufDepartment}"/>
						</header>
					</Column>
					<Column>
						<header>
							<Label text="{i18n>UmlaufRead}"/>
						</header>
					</Column>
					<Column>
						<header>
							<Label text="{i18n>UmlaufStatus}"/>
						</header>
					</Column>
				</columns>
				<ColumnListItem>
					<ObjectIdentifier title="TGH"/>
					<Label text="Somebody"/>
					<Label text="Interessiert"/>
				</ColumnListItem>
			</Table>
		</VBox>
		<buttons>
			<Button id="btnUmlaufSave" text="{i18n>DetailSaveButton}" press="onDialogSave"/>
			<Button id="btnUmlaufCancel" text="{i18n>DetailCancelButton}" press="onDialogCancel"/>
		</buttons>
	</Dialog>
</core:FragmentDefinition>