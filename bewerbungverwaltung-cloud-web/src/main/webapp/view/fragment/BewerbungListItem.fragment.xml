<core:FragmentDefinition xmlns:core="sap.ui.core" xmlns:commons="sap.ui.commons" xmlns:l="sap.ui.layout" xmlns="sap.m">
	<CustomListItem type="Active" press="onListItemPressed">
		<VBox width="auto" class="sapUiTinyMarginTop sapUiSmallMarginBeginEnd" direction="Column">
			<HBox width="auto">
				<Label text="{testModel>BewerberDetails/Vorname} {testModel>BewerberDetails/Nachname}" design="Bold" width="auto"/>
				<FlexBox width="100%"/>
				<Label text="{testModel>StatusDetails/Bezeichnung}" width="auto" textAlign="End"/>
			</HBox>
			<HBox>
				<VBox>
					<Label text="{testModel>BewerberDetails/Postleitzahl} {testModel>BewerberDetails/Ort}" width="100%"/>
					<Table noDataText="{i18n>ItemTableStellenNoDataText}" class="tableStellen sapUiTinyMarginBottom" width="auto" showSeparators="Inner"
						backgroundDesign="Transparent" items="{path: 'testModel>BewerbungStelleDetails', templateShareable: false}">
						<ColumnListItem width="auto" type="Inactive">
							<cells>
								<Text text="{testModel>StelleDetails/Bezeichnung}" width="auto"/>
							</cells>
						</ColumnListItem>
						<columns>
							<Column></Column>
						</columns>
					</Table>
				</VBox>
				<HBox width="100%" alignItems="Center">
					<core:Icon src="sap-icon://navigation-right-arrow" color="black"/>
				</HBox>
			</HBox>
			<HBox width="auto">
				<Label text="{path: 'testModel>EingetragenAm', formatter: '.formatter.formatDatum'}" width="auto"/>
				<FlexBox width="100%"/>
				<Label text="{parts: ['i18n>ItemNumberOfDays', 'testModel>EingetragenAm'], formatter: '.formatter.formatTage'}" width="auto" textAlign="End"/>
			</HBox>
		</VBox>
	</CustomListItem>
</core:FragmentDefinition>